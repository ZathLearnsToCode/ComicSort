<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ComicSort.UI.ViewModels.Controls"
             x:Class="ComicSort.UI.Views.Controls.StatusBarView"
             x:DataType="vm:StatusBarViewModel">

    <Border Background="{DynamicResource Theme.PanelBrush}"
            BorderBrush="{DynamicResource Theme.BorderBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="8,4">
        <Grid ColumnDefinitions="220,220,*,Auto,Auto,Auto,Auto" ColumnSpacing="12">
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="{Binding LibrarySummary}"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       Text="{Binding FilterSummary}"
                       TextTrimming="CharacterEllipsis"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       Text="{Binding SelectedFile}"
                       TextTrimming="CharacterEllipsis"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
            <TextBlock Grid.Column="3"
                       VerticalAlignment="Center"
                       Text="{Binding TransferSummary}"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
            <TextBlock Grid.Column="4"
                       VerticalAlignment="Center"
                       Text="{Binding RatioSummary}"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
            <TextBlock Grid.Column="5"
                       VerticalAlignment="Center"
                       Text="{Binding IssueSummary}"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
            <TextBlock Grid.Column="6"
                       VerticalAlignment="Center"
                       Text="{Binding YearSummary}"
                       Foreground="{DynamicResource Theme.PrimaryTextBrush}" />
        </Grid>
    </Border>
</UserControl>
